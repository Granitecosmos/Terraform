<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- <Terrain_Natural.xml> -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "Sand"]</xpath>
				<value>
					<description>Infertile sand. Slow to walk on.</description>
					<designationCategory>Floors</designationCategory>
					<researchPrerequisites>
						<li>terraform3</li>
					</researchPrerequisites>
					<constructEffect>ConstructDirt</constructEffect>
					<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "Sand"]/statBases</xpath>
				<value>
					<WorkToBuild>12000</WorkToBuild>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "Soil"]</xpath>
				<value>
					<description>Average soil that can harbour plant life.</description>
					<designationCategory>Floors</designationCategory>
					<researchPrerequisites>
						<li>terraform2</li>
					</researchPrerequisites>
					<constructEffect>ConstructDirt</constructEffect>
					<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "Soil"]/statBases</xpath>
				<value>
					<WorkToBuild>10000</WorkToBuild>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "MarshyTerrain"]</xpath>
				<value>
					<description>Marsh, usually found in wet environments. Very slow to walk on.</description>
					<designationCategory>Floors</designationCategory>
					<researchPrerequisites>
						<li>terraform4</li>
					</researchPrerequisites>
					<constructEffect>ConstructDirt</constructEffect>
					<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "MarshyTerrain"]/statBases</xpath>
				<value>
					<WorkToBuild>40000</WorkToBuild>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "SoilRich"]</xpath>
				<value>
					<description>Mineral-rich soil. Plants will grow faster on it.</description>
					<designationCategory>Floors</designationCategory>
					<researchPrerequisites>
						<li>terraform4</li>
					</researchPrerequisites>
					<constructEffect>ConstructDirt</constructEffect>
					<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "SoilRich"]/statBases</xpath>
				<value>
					<WorkToBuild>15000</WorkToBuild>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "Gravel"]</xpath>
				<value>
					<description>Rocky, poor soil. Plants can grow on it but slower.</description>
					<designationCategory>Floors</designationCategory>
					<researchPrerequisites>
						<li>terraform1</li>
					</researchPrerequisites>
					<constructEffect>ConstructDirt</constructEffect>
					<terrainAffordanceNeeded>SmoothHard</terrainAffordanceNeeded>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "Gravel"]/statBases</xpath>
				<value>
					<WorkToBuild>10000</WorkToBuild>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "MossyTerrain"]</xpath>
				<value>
					<description>Mossy soil usually found in cold environments.</description>
					<designationCategory>Floors</designationCategory>
					<researchPrerequisites>
						<li>terraform4</li>
					</researchPrerequisites>
					<constructEffect>ConstructDirt</constructEffect>
					<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "MossyTerrain"]/statBases</xpath>
				<value>
					<WorkToBuild>11000</WorkToBuild>
				</value>
			</li>
		</operations>
	</Operation>
	<!-- </Terrain_Natural.xml> -->
</Patch>
