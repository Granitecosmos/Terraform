			<WorkToBuild>10000</WorkToBuild>
		</statBases>
		<ScatterType>Rocky</ScatterType>
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<designationCategory>Floors</designationCategory>
		<TerrainFilthDef>FilthDirt</TerrainFilthDef>
		<Fertility>0.7</Fertility>
